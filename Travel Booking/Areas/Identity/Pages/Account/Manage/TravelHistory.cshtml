@page
@model Travel_Booking.Areas.Identity.Pages.Account.Manage.TravelHistoryModel
@{
    ViewData["Title"] = "My Travel History";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<h3 class="mb-4">My Travel History</h3>

@if (Model.Bookings == null || !Model.Bookings.Any())
{
    <div class="alert alert-info">You have no travel bookings yet.</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var booking in Model.Bookings)
        {
            <div class="col">
                <div class="card shadow-sm h-100">
                    <img src="@booking.TravelDestination.ImageUrl" class="card-img-top" style="height:200px; object-fit:cover;" alt="@booking.TravelDestination.Name" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@booking.TravelDestination.Name</h5>
                        <p class="card-text text-muted">@booking.TravelDestination.Description</p>
                        <ul class="list-group list-group-flush mb-2">
                            <li class="list-group-item"><strong>Quantity:</strong> @booking.Quantity</li>
                            <li class="list-group-item"><strong>Total Price:</strong> RM @booking.Price.ToString("F2")</li>
                            <li class="list-group-item"><strong>Status:</strong> @booking.Status</li>
                            <li class="list-group-item"><strong>Booked At:</strong> @booking.BookedAt.ToString("yyyy-MM-dd HH:mm")</li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
}
