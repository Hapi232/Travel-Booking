@model Travel_Booking.Models.TravelDestinationModel

@{
    ViewData["Title"] = "Destination Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container-fluid p-0">
    <!-- Hero Image -->
    <div class="position-relative" style="height: 400px; background-image: url('@Model.ImageUrl'); background-size: cover; background-position: center;">
        <div class="position-absolute bottom-0 start-0 w-100 bg-dark bg-opacity-50 text-white p-3">
            <h1 class="fw-bold">@Model.Name</h1>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container my-5">
        <div class="row">
            <!-- Left col: Info -->
            <div class="col-md-9">
                <p class="lead">@Model.Description</p>
                <h4 class="text-success">@($"RM {Model.Price}")</h4>

                <h5 class="mt-4">Trip Details</h5>
                <ul class="list-group list-group-flush mb-4">
                    <li class="list-group-item"><strong>Start Trip:</strong> @Model.StartTrip.ToString("yyyy-MM-dd")</li>
                    <li class="list-group-item"><strong>End Trip:</strong> @Model.EndTrip.ToString("yyyy-MM-dd")</li>
                    <li class="list-group-item"><strong>Available:</strong> @(Model.IsAvailable ? "Yes" : "No")</li>
                    <li class="list-group-item"><strong>Quantity Left:</strong> @Model.Quantity</li>
                </ul>
            </div>

            <!-- Right col: Buttons -->
            <div class="col-md-3 d-flex flex-column gap-2">
                <button id="flavourBtn" class="btn btn-outline-danger w-100 d-flex align-items-center justify-content-center gap-2"
                        onclick="toggleFlavour('@Model.Id')">
                    <i class="bi bi-heart"></i> <span>Add to Favourites</span>
                </button>

                <div class="mb-2">
                    <label for="quantity" class="form-label">Quantity</label>
                    <input type="number" id="quantity" name="quantity" class="form-control" value="1" min="1" max="@Model.Quantity" required />
                    <small class="text-muted">Available: @Model.Quantity</small>
                </div>

                <div class="d-grid gap-2">
                    <a asp-action="PurchasePage" asp-route-travelId="@Model.Id" class="btn btn-success w-100 d-flex align-items-center justify-content-center gap-2">
                        <i class="bi bi-cash-coin"></i> Purchase
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Toast Container -->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1100">
    <div id="flavourToast" class="toast align-items-center text-white bg-primary border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body" id="flavourToastBody">
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>


<style>
    /* Hero image overlay text */
    .position-relative h1 {
        font-size: 3rem;
    }

    .list-group-item strong {
        width: 150px;
        display: inline-block;
    }
</style>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const btn = document.getElementById("flavourBtn");
        const icon = btn.querySelector("i");
        const label = btn.querySelector("span");
        const travelId = '@Model.Id';

        const flavourToastEl = document.getElementById('flavourToast');
        const flavourToast = new bootstrap.Toast(flavourToastEl);
        const toastBody = document.getElementById('flavourToastBody');

        async function checkFlavour() {
            try {
                const response = await fetch(`/Flavour/IsAdded?travelId=${travelId}`);
                const data = await response.json();
                if (data.isAdded) {
                    icon.classList.replace("bi-heart", "bi-heart-fill");
                    btn.classList.replace("btn-outline-danger", "btn-danger");
                    label.textContent = "Added to Favourites";
                }
            } catch (err) {
                console.error(err);
            }
        }
        checkFlavour();

        async function toggleFlavour(travelId) {
            const isAdded = icon.classList.contains("bi-heart-fill");

            try {
                if (!isAdded) {
                    const response = await fetch(`/Flavour/Add?travelId=${travelId}`, { method: 'POST' });
                    if (response.ok) {
                        icon.classList.replace("bi-heart", "bi-heart-fill");
                        btn.classList.replace("btn-outline-danger", "btn-danger");
                        label.textContent = "Added to Favourites";

                        toastBody.textContent = "Added to Favourites ❤️";
                        flavourToast.show();
                    }
                } else {
                    const response = await fetch(`/Flavour/Remove?travelId=${travelId}`, { method: 'POST' });
                    if (response.ok) {
                        icon.classList.replace("bi-heart-fill", "bi-heart");
                        btn.classList.replace("btn-danger", "btn-outline-danger");
                        label.textContent = "Add to Favourites";

                        toastBody.textContent = "Removed from Favourites 💔";
                        flavourToast.show();
                    }
                }
            } catch (err) {
                console.error(err);
                toastBody.textContent = "Something went wrong 😢";
                flavourToast.show();
            }
        }
    </script>
}
