@model Travel_Booking.Models.TravelDestinationViewModel

@{
    ViewData["Title"] = "Delete Travel Destination";
}

<div class="container mt-4">
    <h1 class="mb-4 text-danger">Delete Travel Destination</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="text-warning">Are you sure you want to delete this destination?</h5>
            <hr />

            <dl class="row mb-4">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Price (RM)</dt>
                <dd class="col-sm-9">@Model.Price.ToString("F2")</dd>

                <dt class="col-sm-3">Quantity</dt>
                <dd class="col-sm-9">@Model.Quantity</dd>

                <dt class="col-sm-3">Available</dt>
                <dd class="col-sm-9">
                    @if (Model.IsAvailable)
                    {
                        <span class="badge bg-success">Yes</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">No</span>
                    }
                </dd>

                <dt class="col-sm-3">Image</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid img-thumbnail" style="max-width:300px;" />
                    }
                    else
                    {
                        <span class="text-muted">No image available</span>
                    }
                </dd>

                <dt class="col-sm-3">Start Trip</dt>
                <dd class="col-sm-9">@Model.StartTripString</dd>

                <dt class="col-sm-3">End Trip</dt>
                <dd class="col-sm-9">@Model.EndTripString</dd>
            </dl>

            <form asp-action="DeleteConfirmed">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
