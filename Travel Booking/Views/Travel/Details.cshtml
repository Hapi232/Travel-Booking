@model Travel_Booking.Models.TravelDestinationModel

@{
    ViewData["Title"] = "Destination Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container-fluid p-0">
    <!-- Hero Image -->
    <div class="position-relative" style="height: 400px; background-image: url('@Model.ImageUrl'); background-size: cover; background-position: center;">
        <div class="position-absolute bottom-0 start-0 w-100 bg-dark bg-opacity-50 text-white p-3">
            <h1 class="fw-bold">@Model.Name</h1>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container my-5">
        <div class="row">
            <!-- Left col: Info -->
            <div class="col-md-9">
                <p class="lead">@Model.Description</p>
                <h4 class="text-success">@($"RM {Model.Price}")</h4>

                <h5 class="mt-4">Trip Details</h5>
                <ul class="list-group list-group-flush mb-4">
                    <li class="list-group-item"><strong>Start Trip:</strong> @Model.StartTrip.ToString("yyyy-MM-dd")</li>
                    <li class="list-group-item"><strong>End Trip:</strong> @Model.EndTrip.ToString("yyyy-MM-dd")</li>
                    <li class="list-group-item"><strong>Available:</strong> @(Model.IsAvailable ? "Yes" : "No")</li>
                    <li class="list-group-item"><strong>Quantity Left:</strong> @Model.Quantity</li>
                </ul>
            </div>

            <!-- Right col: Buttons -->
            <div class="col-md-3 d-flex flex-column gap-2">
                <form asp-action="AddToFlavour" asp-controller="Travel" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-outline-primary w-100">Add to Flavour</button>
                </form>

                <form asp-action="Purchase" asp-controller="Travel" method="get">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-success w-100">Purchase</button>
                </form>

                <form asp-action="AddToCart" asp-controller="Travel" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-warning w-100">Add to Cart</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    /* Hero image overlay text */
    .position-relative h1 {
        font-size: 3rem;
    }

    .list-group-item strong {
        width: 150px;
        display: inline-block;
    }
</style>
