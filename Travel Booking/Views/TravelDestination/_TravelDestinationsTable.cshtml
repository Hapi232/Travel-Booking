@model IEnumerable<Travel_Booking.Models.TravelDestinationViewModel>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Description)</th>
            <th>@Html.DisplayNameFor(m => m.Price)</th>
            <th>@Html.DisplayNameFor(m => m.Quantity)</th>
            <th>@Html.DisplayNameFor(m => m.IsAvailable)</th>
            <th>@Html.DisplayNameFor(m => m.StartTripString)</th>
            <th>@Html.DisplayNameFor(m => m.EndTripString)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price.ToString("F2")</td>
                <td>@item.Quantity</td>
                <td>
                    @if (item.IsAvailable)
                    {
                        <span class="badge bg-success">Yes</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">No</span>
                    }
                </td>
                <td>@item.StartTripString</td>
                <td>@item.EndTripString</td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@item.Id">
                            <i class="bi bi-eye"></i> Details
                        </a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
