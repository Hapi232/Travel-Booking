@model IEnumerable<Travel_Booking.Models.TravelDestinationViewModel>

@{
    ViewData["Title"] = "Home";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

<!-- Hero Section -->
<section class="vh-100 d-flex align-items-center justify-content-center text-center text-white"
         style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.6)),
                url('https://images.unsplash.com/photo-1507525428034-b723cf961d3e') center/cover no-repeat;">
    <div class="container animate__animated animate__fadeIn">
        <h1 class="display-1 fw-bold animate__animated animate__fadeInDown">Globetrotter</h1>
        <p class="lead animate__animated animate__fadeIn animate__delay-1s">Explore the World with Ease.</p>
        <a href="#top-destinations" class="btn btn-primary btn-lg mt-3 animate__animated animate__fadeIn animate__delay-2s">
            Plan Your Trip Now!
        </a>
    </div>
</section>

<!-- Top Destinations Section -->
<section id="top-destinations" class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5" data-aos="fade-up">Top Destinations</h2>
        <div class="row g-4">
            @foreach (var destination in Model)
            {
                <div class="col-md-3" data-aos="fade-up" data-aos-delay="100">
                    <div class="card destination-card shadow-sm h-100">
                        <div class="card-img-wrapper">
                            <img src="@destination.ImageUrl" class="card-img-top" alt="@destination.Name"
                                 style="object-fit: cover; aspect-ratio: 3/4;">
                        </div>
                        <div class="card-body text-center">
                            <h5 class="card-title">@destination.Name</h5>
                            <p class="card-text text-muted">@destination.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<style>
    .destination-card {
        border-radius: 12px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .destination-card:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        .destination-card img {
            transition: transform 0.4s ease;
        }

        .destination-card:hover img {
            transform: scale(1.1);
        }

    .card-body {
        background-color: #fff;
    }
</style>

<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
    AOS.init({
        duration: 1000,
        once: true
    });
</script>
